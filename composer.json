{
    "name": "call-scheduler/call-scheduler",
    "description": "Simple booking system for sales calls",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "CallScheduler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CallScheduler\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:standalone": "php tests/standalone-tests.php && php tests/settings-standalone-tests.php",
        "build": "bin/build.sh",
        "release": "bin/release.sh"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
